<Window x:Class="Nutritia.UI.Views.FenetreRecuDon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nutritia.UI.Views"
        mc:Ignorable="d"
        Title="Merci pour votre don" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center">Relevé de transaction Nutritia</Label>
            <Label FontWeight="Bold">Nutritia Inc.</Label>
            <Label>Client:</Label>
            <Label Name="lblNom"></Label>
            <Label Name="lblMontant" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            <Image Name="imgQrCode" Width="100" Height="100"></Image>
            <Label Name="lblModePaiement">Mode de paiement: </Label>
            <Label Name="lblDate">Date/heure: </Label>
            <Label Name="lblNoTransaction">No. de transaction: </Label>
        </StackPanel>
    </Grid>
</Window>
