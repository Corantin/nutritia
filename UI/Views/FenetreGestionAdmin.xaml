<UserControl x:Class="Nutritia.UI.Views.GestionAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nutritia.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="475" d:DesignWidth="650">
    <Grid>
        <Label Margin="61,41,432,407">Rechercher un membre</Label>
        <local:SearchBox x:Name="filterDataGrid" Margin="20,73,406,252" WatermarkContent="Nom de compte" FilterMode="StartWith">
            <local:SearchBox.Columns>
                <DataGridTemplateColumn Header="Admin" IsReadOnly="False" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding EstAdministrateur}"> </CheckBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True" Header="Compte" Binding="{Binding NomUtilisateur}"/>
            </local:SearchBox.Columns>
        </local:SearchBox>
        <Label Margin="317,236,222,212">Administrateurs</Label>
        <DataGrid Name="dgInfoMembre" Margin="248,268,180,104">
            <DataGridCheckBoxColumn IsReadOnly="False" Header="Admin" Width="50" />
            <DataGridTextColumn IsReadOnly="True" Header="Compte"/>
        </DataGrid>
        <Button Margin="317,376,237,66">Accepter</Button>
    </Grid>
</UserControl>
