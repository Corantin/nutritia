                    </Grid.ColumnDefinitions>
                    <Image Source="pack://application:,,,/UI/Images/hamburger.png" VerticalAlignment="Top" Margin="0, 10, 0, 0"></Image>
                    <Label Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Berlin Sans FB Demi" Foreground="DarkGreen" FontSize="18" Margin="0, 10, 0, 0">Note : 3/5</Label>
                    <Label Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0, 35, 0, 0" FontFamily="Berlin Sans FB Demi" Foreground="DarkGreen" FontSize="18">Ajouté par ribaril</Label>
                    <Button Grid.Column="2" Width="75" Height="75" VerticalAlignment="Top" Margin="0, 10, 0, 0">
                        <Image Source="pack://application:,,,/UI/Images/infoIcon.png" VerticalAlignment="Top"></Image>
                    </Button>
                    <Button Grid.Column="3" Width="75" Height="75" VerticalAlignment="Top" Margin="0, 10, 0, 0">Coeur</Button>
                </Grid>
