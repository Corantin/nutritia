<Window x:Class="Nutritia.UI.Views.FenetreIngredients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingrédients" Height="350" Width="400"
        Icon="/Nutritia;component/UI/Images/logoIconPetit.png" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Berlin Sans FB Demi" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="DarkGreen" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="ToolTip">
            <Setter Property="HasDropShadow" Value="True" />
            <Setter Property="BorderBrush" Value="DarkGreen" />
        </Style>
    </Window.Resources>
    <Grid Name="grdIngredients">
        <Grid.Background>
            <ImageBrush Opacity="0.3" ImageSource="pack://application:,,,/UI/Images/background.jpg"/>
        </Grid.Background>
    </Grid>
</Window>
