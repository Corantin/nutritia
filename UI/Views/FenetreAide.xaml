                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Style="{StaticResource tabItem}" Name="tiParametre" Header="{Resx Parametre}">
                <ScrollViewer PreviewMouseWheel="ScrollFocus">
                    <StackPanel>
                        <Label Style="{StaticResource fontSousTitre}" Content="{Resx VosParametres}" />
                        <TextBlock Name="VosParametres" TextWrapping="Wrap">
                            
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Style="{StaticResource tabItem}" Name="tiProfil" Header="{Resx Profil}">
