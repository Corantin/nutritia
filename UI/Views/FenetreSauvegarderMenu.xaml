<Window x:Class="Nutritia.UI.Views.FenetreSauvegarderMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Resx Titre}" Height="200" Width="275"
        Icon="pack://application:,,,/UI/Images/logoIconPetit.png"
        ResizeMode="NoResize"
        ResxExtension.DefaultResxName="Nutritia.UI.Ressources.Localisation.FenetreSauvegarderMenu" Language="{UICulture}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6.5*"></RowDefinition>
            <RowDefinition Height="3.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush Opacity="0.3" ImageSource="pack://application:,,,/UI/Images/background.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Name="lblNom" Style="{StaticResource fontNutritia}" HorizontalAlignment="Center" FontSize="16" Content="{Resx Nom}"/>
            <TextBox Name="txtNom" Style="{StaticResource fontNutritia}" Width="200" Height="25"></TextBox>
        </StackPanel>
        <Button Name="btnSauvegarder" Grid.Row="1" Style="{StaticResource fontNutritia}" Width="150" Height="25" FontSize="16" Click="btnSauvegarder_Click" Content="{Resx Sauvegarder}" />
    </Grid>
</Window>
