<Window x:Class="Nutritia.UI.Views.FenetreSauvegarderMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nutritia - Sauvegarder un menu" Height="200" Width="275"
        Icon="pack://application:,,,/UI/Images/logoIconPetit.png"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6.5*"></RowDefinition>
            <RowDefinition Height="3.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush Opacity="0.3" ImageSource="pack://application:,,,/UI/Images/background.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Name="lblNom" Style="{StaticResource fontNutritia}" HorizontalAlignment="Center">Nom du menu</Label>
            <TextBox Name="txtNom" Width="200" Height="25"></TextBox>
        </StackPanel>
        <Button Name="btnSauvegarder" Grid.Row="1" Style="{StaticResource fontNutritia}" Width="150" Height="25" Click="btnSauvegarder_Click">Sauvegarder</Button>
    </Grid>
</Window>
