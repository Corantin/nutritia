<Window x:Class="Nutritia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:Nutritia.Properties"
        Title="Nutritia" Icon="/Nutritia;component/UI/Images/LogoIcon.PNG" Height="550" Width="650"
		ResizeMode="NoResize">
    <Grid>
    
        <Grid.Background>
            <ImageBrush Opacity="0.3" ImageSource="/Nutritia;component/UI/Images/background.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <DockPanel>
            <ToolBar Width="650">
                <Button>
                    <DockPanel>
                        <Image Source="/Nutritia;component/UI/Images/aProposIcon.PNG"/>
                        <Label Content="{x:Static resx:Resources.Information}" FontSize="15" FontFamily="Berlin"/>
                    </DockPanel>
                </Button>
                <Button>
                    <DockPanel>
                        <Image Source="/Nutritia;component/UI/Images/paramIcon.PNG"/>
                        <Label Content="{x:Static resx:Resources.Parametre}" FontSize="15" FontFamily="Berlin"/>
                    </DockPanel>
                </Button>
                <Button>
                    <DockPanel>
                        <Image Source="/Nutritia;component/UI/Images/HelpIcon.PNG"/>
                        <Label Content="{x:Static resx:Resources.Aide}" FontSize="15" FontFamily="Berlin"/>
                    </DockPanel>
                </Button>
            </ToolBar>
        </DockPanel>

        <ContentPresenter Grid.Row="1" Name="presenteurContenu" />

    </Grid>

</Window>
