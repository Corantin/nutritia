<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping assembly="Nutritia"
                   namespace="Nutritia"
                   xmlns="urn:nhibernate-mapping-2.2">
  <class name="Membre" table="Membres">
    <id name="IdMembre">
      <column name="idMembre" not-null="true" sql-type="INTEGER" />
      <generator class="identity" />
    </id>
    <property name="Nom">
      <column name="nom" not-null="true" sql-type="VARCHAR" />
    </property>
    <property name="Prenom">
      <column name="prenom" not-null="true" sql-type="VARCHAR" />
    </property>
    <property name="Taille">
      <column name="taille" not-null="true" sql-type="INTEGER" />
    </property>
    <property name="Masse">
      <column name="masse" not-null="true" sql-type="DOUBLE" />
    </property>
    <property name="DateNaissance">
      <column name="dateNaissance" not-null="true" sql-type="DATETIME" />
    </property>
    <property name="MotPasse">
      <column name="motPasse" not-null="true" sql-type="VARCHAR" />
    </property>
    <property name="MotPasse">
      <column name="motPasse" not-null="true" sql-type="VARCHAR" />
    </property>
    <property name="EstAdmin">
      <column name="" not-null="true" sql-type="" />
    </property>
    <property name="EstBanni">
      <column name="" not-null="true" sql-type="" />
    </property>

    <bag name="ListeRestrictions" inverse="true" generic="true" lazy="false" cascade="all">
      <key>
        <column name="idRestrictionAlimentaireMembre" />
      </key>
      <one-to-many class="RestrictionAlimentaire"/>
    </bag>

    <bag name="ListeObjectifs" inverse="true" generic="true" lazy="false" cascade="all">
      <key>
        <column name="idObjectifMembre" />
      </key>
      <one-to-many class="Objectif"/>
    </bag>

    <bag name="ListePreferences" inverse="true" generic="true" lazy="false" cascade="all">
      <key>
        <column name="idPreferenceMembre" />
      </key>
      <one-to-many class="Preference"/>
    </bag>

    <bag name="ListeMenus" inverse="true" generic="true" lazy="false" cascade="all">
      <key>
        <column name="idMenu" />
      </key>
      <one-to-many class="Menu"/>
    </bag>

  </class>
</hibernate-mapping>